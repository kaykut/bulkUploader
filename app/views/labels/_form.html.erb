<%= twitter_bootstrap_form_for(@label) do |f| %>
	<%=f.inputs 'Label', :class => 'Label' do %>
    <%= f.text_field :name %>
    <%= f.text_area :description, :rows => 4 %><br />
    <%= f.select 'label_type', 'Label Type', Label::LABEL_TYPES, :input_html => { :include_blank => false }  %>
	<% end %>
	<%= f.actions do %>
    <%= f.submit %>
	<% end %>
<% end %>

