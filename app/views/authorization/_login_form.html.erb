<%= twitter_bootstrap_form_for :user do |f| %>
	<%= f.inputs do %>
		<%= f.text_field :email, :placeholder => 'me@example.com' %>
	  <%= f.password_field :password, :size => 30 %>
	<% end %>
	<%= f.actions do%>
  	<%= f.submit "Login", :class => 'btn primary' %>
	<% end %>
<% end %>
<%= link_to 'Sign Up', :controller => 'users', :action => 'new' %>