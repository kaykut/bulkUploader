<%= form_tag do %>
  <fieldset>
    <div>
      <p>
        <label for="Username">Username:</label>
        <%= text_field_tag :name, params[:name] %>
      </p>
      <p>
        <label for="password">Password:</label>
        <%= password_field_tag :password, params[:password] %>
      </p>
      <p>
        <%= submit_tag "Login", :class => 'btn primary' %>
      </p>
    </div>
  </fieldset>
<% end %>
