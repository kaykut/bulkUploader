<%= twitter_bootstrap_form_for(@user) do |user| %>
	<%= user.inputs 'Sign up', :class => 'sign_up' do %>
		<%= user.text_field :email, :placeholder => 'me@example.com' %>
	  <%= user.password_field :password, :size => 30 %>
   	<%= user.password_field :password_confirmation, :size => 30 %>
	<% end %>
	<%= user.actions do %>
	  <%= user.submit %>
1	<% end %>
<% end %>
