<%= render 'layouts/action_bar'%>
<table class="zebra-striped bordered-table condensed-table"> 
  <thead>
		<tr>
	    <th>Name</th>
	    <th>Type</th>
	    <th>Synced?</th>
	    <th></th>
		</tr>
  </thead>
	<tbody>
		<% @companies.each do |company| %>
		  <tr>
		    <td><%= company.name %></td>
		    <td><%= company.company_type %></td>
		    <td><%= company.dfp_id.blank? ? "No" : "YES" %></td>	
		    <td><%= link_to 'Details', company %>
		    		<%= link_to 'Edit', edit_company_path(company) %>
		    		<%= link_to 'Destroy', company, confirm: 'Are you sure?', method: :delete %></td>
		  </tr>
		<% end %>
	</tbody>
</table>