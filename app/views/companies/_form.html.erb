<%= twitter_bootstrap_form_for(@company) do |f| %>
	<%= f.inputs do%>
    <%= f.text_field :name %>
    <%= f.select 'company_type', 'Company Type',
							 @company.company_types,
				   		 :input_html => { :include_blank => false } %>
    <%= f.text_field :address %>
    <%= f.text_field :email %>
    <%= f.text_field :faxPhone %>
    <%= f.text_field :primaryPhone %>
    <%= f.text_field :externalId %>
    <%= f.text_field :label_list, :readonly => true %>
		<% f.toggles do %>
    	<%= f.check_box :enableSameAdvertiserCompetitiveExclusion %>
		<% end %>
    <%= f.text_area :comment %>
	<% end %>
	<%= f.actions do %>
    <%= f.submit %>
	<% end %>
<% end %>

