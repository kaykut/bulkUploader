<h1>Listing orders</h1>

<table>
  <tr>
    <th>Advertiser</th>
    <th>Name</th>
    <th>Trafficker</th>
    <th>Secondary trafficker</th>
    <th>Sales person</th>
    <th>Secondary sales person</th>
    <th>Agency</th>
    <th>External order</th>
    <th>Po number</th>
    <th>Currency code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.advertiser_id %></td>
    <td><%= order.name %></td>
    <td><%= order.trafficker_id %></td>
    <td><%= order.secondary_trafficker_id %></td>
    <td><%= order.sales_person_id %></td>
    <td><%= order.secondary_sales_person_id %></td>
    <td><%= order.agency_id %></td>
    <td><%= order.external_order_id %></td>
    <td><%= order.po_number %></td>
    <td><%= order.currency_code %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

